<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReviewActivity"
    android:background="#FEFFF0"
    >
    <ImageView
        android:id="@+id/searchbackground"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FCC207"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/back"
        android:layout_width="12.28dp"
        android:layout_height="20.65dp"
        android:layout_marginLeft="23dp"
        android:layout_marginTop="19dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="253dp"
        android:layout_height="32dp"
        android:layout_marginLeft="46dp"
        android:layout_marginTop="9dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/back"
        app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_marginTop="3.5dp"
        android:text="Search Restaurants"
        android:textColor="#BEBEBE"

        android:textSize="18sp" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_marginTop="4.6dp"
            android:layout_marginRight="19.44dp"
            android:src="@drawable/maginfiglass"

            />

    </androidx.cardview.widget.CardView>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/reviewbackground"
        app:layout_constraintTop_toBottomOf="@+id/searchbackground"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/kfc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchbackground"
        android:gravity="center_horizontal"
        android:layout_marginTop="173dp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="KFC"
        android:textStyle="bold"
/>
    <TextView
        android:id="@+id/fastfood"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/kfc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Fast Food, Sandwiches"
        android:textColor="#fff"
        android:textSize="18sp"
        android:textStyle="bold"
/>
    <ImageView
        android:id="@+id/timeimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fastfood"
        app:layout_constraintStart_toStartOf="@+id/fastfood"
        android:src="@drawable/time"
        android:layout_marginTop="3.42dp"
        />
    <TextView
        android:id="@+id/timetext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/timeimage"
        app:layout_constraintTop_toBottomOf="@+id/fastfood"
        android:text="50-55 Mins"
        android:textColor="#FFFFF9"
        android:layout_marginTop="1.5dp"
        android:layout_marginLeft="4dp"
        />
    <ImageView
        android:id="@+id/priceimage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/timetext"
        app:layout_constraintTop_toBottomOf="@id/fastfood"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="18dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/priceimage"
        app:layout_constraintTop_toBottomOf="@+id/fastfood"
        android:text="15 EGP"
        android:textSize="12sp"
        android:textColor="#FFFFF9"
        android:layout_marginTop="5dp"
        />
    <RatingBar
        android:id="@+id/ratebar"
        style="?android:attr/ratingBarStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_marginTop="7.9dp"

        android:isIndicator="false"
        app:layout_constraintTop_toBottomOf="@id/timetext"
        app:layout_constraintStart_toStartOf="@+id/timetext"
        />
    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        app:cardCornerRadius="45dp"


        app:cardBackgroundColor="#FEFFF0"
        app:layout_constraintTop_toBottomOf="@id/ratebar"

        app:layout_constraintStart_toStartOf="parent"
        >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/ratebar"



        >
        <ImageView
            android:id="@+id/circleimage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/circleimageinreview"
            android:layout_marginTop="28dp"
            android:layout_marginLeft="20dp"
            />
        <TextView
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/circleimage"
            android:text="Write a review"
            android:textSize="18sp"
            android:textColor="#3F3E3F"
            android:layout_marginTop="38dp"
            android:layout_marginLeft="10dp"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/reviewcard"
            android:layout_width="match_parent"
            android:layout_height="116dp"
            app:layout_constraintTop_toBottomOf="@+id/circleimage"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="22dp"
            android:layout_marginTop="15dp"
            />
        <Button
            android:layout_width="117dp"
            android:layout_height="43dp"
            app:layout_constraintTop_toBottomOf="@+id/reviewcard"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="@drawable/confrimbutton"
            android:layout_marginTop="25dp"
            android:layout_marginRight="22dp"
            android:text="Confirm"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="#3F3E3F"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>
